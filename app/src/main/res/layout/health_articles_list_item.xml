<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:strokeColor="@color/grayEditTextBackground"
    app:strokeWidth="@dimen/_2sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageArticle"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/health_article_image_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtArticleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/traditional_herbal_medicine_treatments_for_covid_19"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toStartOf="@id/imageSave"
            app:layout_constraintStart_toEndOf="@+id/imageArticle"
            app:layout_constraintTop_toTopOf="@+id/imageArticle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/article_one_date"
            android:textColor="@color/dateGrayColor"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="@id/imageArticle"
            app:layout_constraintStart_toStartOf="@id/txtArticleTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtArticleTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text=" o "
            android:textSize="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toEndOf="@id/txtDate"
            app:layout_constraintTop_toTopOf="@+id/txtDate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/article_one_8_min_read"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toEndOf="@+id/txtDot"
            app:layout_constraintTop_toTopOf="@id/txtDate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageSave"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:backgroundTint="@color/white"
            android:src="@drawable/save_article_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtArticleTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>